<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PresetDescriptions">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/preset_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:fontFamily="@font/montserratbold"
        android:paddingStart="50dp"
        android:paddingTop="30dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp"
        android:text="Lorem Impsum"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="82dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/preset_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner2"
        android:fontFamily="@font/montserratregular"
        android:paddingStart="40dp"
        android:paddingTop="0dp"
        android:paddingEnd="40dp"
        android:paddingBottom="20dp"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book"
        android:textColor="#D3D3D3"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/preset_name"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/unresponsive_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="12dp"
        android:paddingTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/preset_description" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/preset_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:colorAccent="#FF7600"
        app:backgroundTint="@color/orange"
        app:elevation="30dp"
        app:fabCustomSize="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.923"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/preset_name"
        app:layout_constraintVertical_bias="0.96"
        app:maxImageSize="50dp"
        app:srcCompat="@drawable/ic_baseline_arrow_forward_24"
        app:tint="@color/white" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/back_preset_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:colorAccent="#FF7600"
        app:backgroundTint="@null"
        app:elevation="30dp"
        app:fabCustomSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.019"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/preset_name"
        app:layout_constraintVertical_bias="0.043"
        app:maxImageSize="30dp"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24"
        app:tint="@color/white" />


</androidx.constraintlayout.widget.ConstraintLayout>